XXpkgver() {
    cd "$pkgname"
    local _version="$(  git describe  --tags --long      | cut -d'-' -f1 | sed 's/^n//')"
    local _revision="$( git describe  --tags --match 'N' | cut -d'-' -f2)"
    local _shorthash="$(git rev-parse --short HEAD)"
    printf '%s.r%s.g%s' "$_version" "$_revision" "$_shorthash"
}

prepare() {
#  cd ffmpeg
  cd ${pkgbase%}-$pkgver

#  git cherry-pick -n 7c59e1b0f285cd7c7b35fcd71f49c5fd52cf9315 # fix build against libsrt 1.4.2
#  patch -Np1 -i "${srcdir}"/vmaf-model-path.patch
  patch -Np1 -i ../add-av_stream_get_first_dts-for-chromium.patch # https://crbug.com/1251779

}


build() {
  #source /etc/profile.d/perlbin.sh
  cd ${pkgbase%}-$pkgver

  ./configure \
        --prefix=/usr \
        --enable-shared \
        --disable-static \
        --enable-gpl \
        --enable-runtime-cpudetect \
        --enable-pthreads \
        --enable-small \
        --disable-ffprobe \
        --disable-debug \
        --disable-doc    \
--enable-vdpau \
--enable-openssl \
--enable-nonfree \
    --enable-libdav1d \
    --enable-vaapi \
    --enable-libpulse \

#--enable-vulkan \

#        --enable-avresample \
#    --disable-ffserver \
#    --enable-x11grab \
#--enable-libx265
#--enable-gnutls \
#        --disable-encoder=h263 \
#        --disable-encoder=h263p \
#        --disable-encoder=mpeg2video \
#        --disable-encoder=msmpeg4v1 \
#        --disable-encoder=msmpeg4v2 \
#        --disable-encoder=msmpeg4v3 \
#        --disable-symver \

  make
  make tools/qt-faststart
#  make doc/ff{mpeg,play,server}.1
}

package() {
  #source /etc/profile.d/perlbin.sh
  cd ${pkgbase%-full}-$pkgver
  make DESTDIR="$pkgdir" install install-man
  install -Dm755 tools/qt-faststart "$pkgdir"/usr/bin/qt-faststart
 # install -Dm644 "$srcdir"/UNREDISTRIBUTABLE.txt "$pkgdir/usr/share/licenses/$pkgbase/UNREDISTRIBUTABLE.txt"
}

