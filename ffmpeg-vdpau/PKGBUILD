#      'libavc1394' 'libbs2b' 'libcaca' 'libcdio-paranoia' 'libcl' 'libdc1394'
#      'libfdk-aac' 'libgme' 'libiec61883' 'libsoxr' 'libutvideo-git'
#      'libxv' 'mesa' 'openal' 'opencl-headers' 'rtmpdump' 'shine' 'twolame'
