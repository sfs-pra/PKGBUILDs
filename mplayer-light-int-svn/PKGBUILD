# Maintainer: Steven Honeyman <stevenhoneyman at gmail com>
#
# Modified from Arch to remove lirc-utils and smbclient requirements
# Also use latest svn build, with ffmpeg latest snapshot
#

pkgname='mplayer-light-int'
pkgbase=mplayer
pkgver=38154
pkgver=37553
pkgrel=7
arch=('i686' 'x86_64')
f=2.8.9
pkgdesc='Media player for Linux (no lirc-utils and smbclient deps)'
#makedepends=('sdl' 'libdca' 'mesa' 'yasm' 'svn')
makedepends=( 'yasm' 'svn')
Xdepends=(
    'desktop-file-utils' 'ttf-font' 'enca' 'libxss' 'a52dec' 'libvpx'
    'x264' 'libmng' 'libdca' 'lame' 'fontconfig'
    'libgl' 'libxinerama' 'libvdpau' 'xvidcore'
    'opencore-amr' 'libmad' 'sdl' 'libtheora' 'libxxf86dga'
    'fribidi' 'libjpeg' 'faac' 'faad2' 'libxvmc' 'schroedinger' 'mpg123'
    'libass' 'libxxf86vm' 'libbluray' 'libcdio-paranoia' 'opus'
)
depends=('libxss' 'libvdpau' 'fribidi' 'libass' 'libdvdnav' 'libdvdread')
provides=('mplayer')
conflicts=('mplayer')
backup=('etc/mplayer/codecs.conf' 'etc/mplayer/input.conf')
license=('GPL')
url='http://www.mplayerhq.hu/'
options=('!buildflags' '!emptydirs' 'strip')
#source=(svn://svn.mplayerhq.hu/mplayer/trunk
source=(${pkgbase}-${pkgver}::"svn://svn.mplayerhq.hu/mplayer/trunk#revision=${pkgver}"
	http://www.ffmpeg.org/releases/ffmpeg-${f}.tar.xz
        mplayer.desktop
        cdio-includes.patch)
md5sums=('SKIP'
	 'SKIP'
	 '62f44a58f072b2b1a3c3d3e4976d64b3'
	 '7b5be7191aafbea64218dc4916343bbc'
         )

Xpkgver() {
  cd trunk
  svnversion
}

prepare() {
  cd ${pkgbase}-${pkgver}
#  export CFLAGS="${CFLAGS/-march=x86-64/}"
  export CFLAGS="${CFLAGS/-mtune=generic/}"
  export LDFLAGS="${LDFLAGS/,O1/}"
  export LDFLAGS="${LDFLAGS/,--sort-common/}"

#  cd trunk
  mv ../ffmpeg-$f ffmpeg

#  patch -p0 -i ../cdio-includes.patch

  echo "#define VERSION \"SVN-r$pkgver\"" > version.h
  echo '#define MP_TITLE "%s "VERSION" (C) 2000-2014 MPlayer Team\n"' >> version.h
}

build() {
  cd ${pkgbase}-${pkgver}
#  cd trunk

X(){
  ./configure --prefix=/usr \
    --enable-runtime-cpudetection \
--enable-gui \
    --disable-arts \
    --disable-liblzo \
    --disable-speex \
    --disable-openal \
    --disable-libdv \
    --disable-musepack \
    --disable-esd \
    --disable-mga \
    --disable-ass-internal \
    --disable-cdparanoia \
    --disable-xvmc \
    --disable-radio \
    --disable-radio-capture \
    --disable-tv \
    --disable-smb \
    --disable-lirc \
    --disable-jack \
    --disable-pulse \
    --disable-caca \
    --disable-inet6 \
    --disable-ladspa \
    --disable-aa \
    --language=ru \
    --confdir=/etc/mplayer

  ./configure --prefix=/usr \
    --enable-runtime-cpudetection \
--disable-gui \
--enable-static \
    --disable-arts \
    --disable-liblzo \
    --disable-speex \
    --disable-openal \
    --disable-libdv \
    --disable-musepack \
    --disable-esd \
    --disable-mga \
    --disable-ass-internal \
    --disable-cdparanoia \
--disable-smb \
--language=ru \
    --confdir=/etc/mplayer \
    --disable-mencoder \
--disable-liblzo --disable-faad --disable-libdv  \
--disable-ladspa --disable-libbs2b --disable-libdca --disable-musepack --disable-gl --enable-vdpau \
--disable-directfb --disable-sdl --disable-mga --disable-jack --disable-pulse --disable-ossaudio \
--enable-dvdnav --disable-pvr --disable-enca --enable-fribidi --disable-maemo --disable-lirc --disable-lircc \
--disable-nemesi --disable-vstream --disable-smb --disable-live --disable-speex --disable-mng \
    --disable-openal --disable-nas --disable-esd --extra-cflags=-DHAVE_MMAP \
 --disable-ftp
##--disable-sse --disable-sse2 --disable-ssse3 \
##--disable-mmx --disable-mmxext --disable-3dnow --disable-3dnowext --disable-fastmemcpy  \

}


  ./configure --prefix=/usr \
    --enable-runtime-cpudetection \
    --disable-gui \
    --enable-xvmc \
    --confdir=/etc/mplayer \
--enable-dvdnav \
--language=ru \
--enable-vdpau \
--enable-gnutls --enable-static

#--enable-gui \
#    --enable-radio \
#    --enable-radio-capture \


  [[ "$CARCH" = "i686" ]] &&  sed 's|-march=i486|-march=i686|g' -i config.mak

  make -j4
}

package() {
 # cd trunk
   cd ${pkgbase}-${pkgver}
 make DESTDIR="$pkgdir" install-mplayer install-mplayer-man

  install -Dm644 etc/{codecs.conf,input.conf,example.conf} \
    "$pkgdir/etc/mplayer/"

  install -Dm644 ../mplayer.desktop \
    "$pkgdir"/usr/share/applications/mplayer.desktop

  install -Dm644 etc/mplayer256x256.png \
    "$pkgdir"/usr/share/pixmaps/mplayer.png
}
