pkgbase=mpv
pkgname=mpv-light
pkgver=0.38.0
pkgrel=2
pkgdesc='Video player based on MPlayer/mplayer2, with selection of features.'
arch=('i686' 'x86_64')
license=('GPL')
url='http://mpv.io'
#depends=('ffmpeg' 'lcms2' 'libxkbcommon' 'libxrandr' 'libxss' 'lua52' 'uchardet' 'desktop-file-utils' 'hicolor-icon-theme')
depends=('vulkan-headers' 'libplacebo' 'libxpresent' 'ffmpeg'  'lua52'  'desktop-file-utils' 'hicolor-icon-theme' 'libass>=0.13' 'libvdpau>=0.2' 'libxss' 'libdvdnav')
#makedepends=('mesa' 'python-docutils')
replaces=('mpv')
provides=('mpv')
conflicts=('mpv')
optdepends=('youtube-dl: for video-sharing websites playback')
options=('!emptydirs' '!buildflags')
install=mpv.install
source=("${pkgbase}-${pkgver}.tar.gz::https://github.com/mpv-player/${pkgbase}/archive/v${pkgver}.tar.gz")
#source=("${pkgbase}.tar.gz::https://github.com/mpv-player/${pkgbase}/archive/v${pkgver}.tar.gz")
sha256sums=('SKIP')
#a2157174e46db46dad5deb1fde94283e72ebe922fd15447cb16a2a243fae5bda')

Xprepare() {
  cd ${pkgbase}-${pkgver}
[ -f /bin/python ] || sudo ln -s /bin/python2 /bin/python
  ./bootstrap.py
}

build() {
#  cd "${pkgname}"
#  cd ${pkgbase}-${pkgver}
ln -sf ${pkgbase}-${pkgver} ${pkgbase}
#meson setup --wipe
  local _meson_options=(
    --auto-features auto

    -Dlibmpv=true

    -Dcaca=disabled
-Dcdda=disabled
    -Ddvbin=enabled
    -Ddvdnav=enabled
-Dlibarchive=disabled
-Dx11=enabled
    -Dvulkan=enabled
-Dvulkan-interop=disabled
-Dlibbluray=disabled
-Dlcms2=disabled
-Dvideotoolbox-pl=disabled
-Dpipewire=disabled
-Dwayland=enabled
-Dxv=enabled
  )

#  arch-meson "${pkgname}" build "${_meson_options[@]}"
  arch-meson "${pkgbase}" build "${_meson_options[@]}"
#  arch-meson "${pkgbase}-${pkgver}" build "${_meson_options[@]}"

  meson compile -C build

}
Xbuild() {
  cd ${pkgbase}-${pkgver}

  ./waf configure --prefix=/usr \
    --confdir=/etc/mpv \
    --enable-libmpv-shared \
    --disable-libbluray \
--enable-dvdnav \
    --disable-cdda \
    --disable-rubberband \
    --disable-vapoursynth \
    --disable-libavdevice \
    --disable-jack \
    --enable-pulse \
--enable-vdpau \
    --disable-vdpau-gl-x11 \
    --disable-tv \
--disable-lcms2 \
    --disable-dvbin \
\
\
--enable-xv \
    --lua=52arch \
--enable-x11 \
--enable-vaapi \
--disable-libarchive \

#--enable-vulkan

#--enable-libass \
#    --disable-oss-audio \
#    --disable-rsound \
#    --disable-libsmbclient \
#    --disable-libv4l2 \
#    --disable-tv-v4l2 \
#    --disable-vapoursynth-lazy \
#    --disable-dvdread \
#    --enable-zsh-comp \
#    --enable-encoding \
# --disable-gl \
#--enable-vdpau-hwaccel \
#    --enable-shm \
#    --enable-termios \
#    --disable-xinerama \
#    --disable-libavresample \
#    --enable-libswresample \
#    --disable-libguess \
#    --disable-enca \

#    --disable-pvr \
#    --disable-libavfilter \
#--disable-libass # need 4 lua-gui
#    --enable-egl-x11 \
#    --lua=52arch \
#    --enable-uchardet \

  ./waf build
}

Xpackage_mpv-light() {
  cd ${pkgbase}-${pkgver}
  ./waf install --destdir="${pkgdir}"

  install -d "${pkgdir}"/usr/share/doc/mpv/examples
#  install -m644 etc/{input,example}.conf \
#    "${pkgdir}"/usr/share/doc/mpv/examples
  install -m644 DOCS/{encoding.rst,tech-overview.txt} \
    "${pkgdir}"/usr/share/doc/mpv
}

check() {
  meson test -C build
}

#package() {
package_mpv-light() {
  meson install -C build --destdir "${pkgdir}"

  # delete private entries only required for static linking 
  sed -i -e '/Requires.private/d' -e '/Libs.private/d' "${pkgdir}"/usr/lib/pkgconfig/mpv.pc

  install -m0644 "${pkgbase}"/DOCS/{encoding.rst,tech-overview.txt} \
    "${pkgdir}"/usr/share/doc/mpv

  install -m0644 "${pkgbase}"/TOOLS/lua/* \
    -D -t "${pkgdir}"/usr/share/mpv/scripts
}
