# Maintainer: Balló György <ballogyor+arch at gmail dot com>
# Contributor: Bartłomiej Piotrowski <bpiotrowski@archlinux.org>
# Contributor: Angel Velasquez <angvp@archlinux.org>
# Contributor: Juergen Hoetzel <juergen@archlinux.org>
pkgbase=lxpanel
pkgname=lxpanel0.6
pkgver=0.6.2
pkgrel=1
pkgdesc='Lightweight X11 desktop panel for LXDE'
arch=('i686' 'x86_64' aarch64)
license=('GPL2')
url='http://lxde.org/'
groups=('lxde')
depends=('alsa-lib' 'menu-cache' 'lxmenu-data' 'libwnck' 'libfm-gtk2' 'libkeybinder2')
#makedepends=('intltool' 'docbook-xml' 'docbook-xsl' 'wireless_tools')
makedepends=('intltool'  'wireless_tools')
optdepends=('wireless_tools: netstat plugin')
source=(https://downloads.sourceforge.net/lxde/$pkgbase-$pkgver.tar.gz)
sha256sums=('SKIP') #342cfa205f255acf69c76ba0ca6c77c890f3955a879b755931c80ffae4d98fb1')

build() {
  cd $pkgbase-$pkgver
  ./configure \
    --sysconfdir=/etc \
    --prefix=/usr $([ "`uname -m`" = "aarch64" ] && echo " --host=aarch64-unknown-linux-gnu  --build=aarch64-unknown-linux-gnu ")

  #https://bugzilla.gnome.org/show_bug.cgi?id=656231
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}
