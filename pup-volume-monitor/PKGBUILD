# Contributor: sfs <sfslinux@gmail.com>
pkgname=pup-volume-monitor
pkgver=0.1.15
pkgrel=1
pkgdesc="$pkgname"
arch=(i686 x86_64 aarch64)
url="https://puppyrus.org"
license=('GPL')
groups=(ftp)
depends=('gtk2')
install=
#source=(https://download.pureftpd.org/pub/pure-ftpd/releases/obsolete/$pkgname-$pkgver.tar.bz2)
source=($pkgname-$pkgver.tar.xz)
noextract=()
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr  --sbindir=/usr/bin --libexecdir=/usr/lib --sysconfdir=/etc \
  $([ "`uname -m`" = "aarch64" ] && echo " --host=aarch64-unknown-linux-gnu  --build=aarch64-unknown-linux-gnu ")
  make || return 1

}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}


