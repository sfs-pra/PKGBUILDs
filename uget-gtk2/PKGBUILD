# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=uget-gtk2
_pkgname=uget
pkgver=1.8.1
pkgrel=1
pkgdesc="GTK+ download manager featuring download classification and HTML import"
arch=('x86_64')
url="http://ugetdm.com/"
license=('LGPL')
depends=('libnotify' 'gtk2'  'curl')
makedepends=('intltool')
optdepends=('aria2: alternative backend')
source=(https://ayera.dl.sourceforge.net/project/urlget/uget%20%28stable%29/1.8.1/uget-1.8.1.tar.gz)
sha256sums=('SKIP')

build() {
  cd $_pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-gstreamer
  make
}

package() {
  cd $_pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
